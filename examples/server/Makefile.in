NAME = netconf-server
VERSION = 0.2
IDGIT = "built from git $(shell git show --pretty=oneline | head -1 | cut -c -20)"
IDNOGIT = "released as version $(VERSION)"

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

# Set path to search for libnetconf if installed into other than default location.
LIBNETCONF_SEARCH = "-Wl,-rpath,$(prefix)/lib"

SETBIT = @SETBIT@
SETUSER = @SETUSER@
SETGROUP = @SETGROUP@
INSTALL_BIN_OPTIONS = 
SERVERCFG_PATH = $(DESTDIR)/@SERVERCFG_PATH@
CC = @CC@
LIBS = -L../../ $(LIBNETCONF_SEARCH) -lnetconf -levent
CFLAGS = -Wall @CFLAGS@
CPPFLAGS = @CPPFLAGS@ -I../../src/ -DSERVERCFG_PATH=\"$(SERVERCFG_PATH)\" -DVERSION=\"$(VERSION)\"
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

INSTALL_BIN_OPTIONS = 
ifeq ($(SETBIT), 1)
INSTALL_BIN_OPTIONS = --mode=4755 --owner=$(SETUSER)
endif
ifeq ($(SETBIT), 2)
INSTALL_BIN_OPTIONS = --mode=2575 --group=$(SETGROUP)
endif
ifeq ($(SETBIT), 3)
INSTALL_BIN_OPTIONS = --mode=6775 --owner=$(SETUSER) --group=$(SETGROUP)
endif

OBJDIR= .obj

TOPDIR = @CONFIGURE_PWD@

SRCS =  main.c 

HDRS = 

OBJS = $(SRCS:%.c=$(OBJDIR)/%.o)

all: $(NAME) $(SUBDIRS)

$(NAME): $(OBJS)
	$(CC) $(CPPFLAGS) $(CFLAGS) $(OBJS) $(LIBS) -o $(NAME)

.PHONY: static
static: $(OBJS)
	$(CC) $(CPPFLAGS) $(CFLAGS) $(OBJS) ../../libnetconf.a -levent -o $(NAME)

$(OBJDIR)/%.o: %.c
	@[ -d $$(dirname $@) ] || \
		(mkdir -p $$(dirname $@))
	$(CC) $(CFLAGS) $(CPPFLAGS) -fPIC -c $< -o $@

.PHONY: install
install: $(NAME)
	@[ -d $(DESTDIR)/$(bindir) ] || \
		(mkdir -p $(DESTDIR)/$(bindir); chmod 755 $(DESTDIR)/$(bindir))
	$(INSTALL_PROGRAM) $(INSTALL_BIN_OPTIONS) $(NAME) $(DESTDIR)/$(bindir)/;
	@[ -d $(SERVERCFG_PATH) ] || \
		mkdir -p $(SERVERCFG_PATH);
	if test "$(SETBIT)" = "1"; then \
		(chmod -R 700 $(SERVERCFG_PATH); \
		chown $(SETUSER) $(SERVERCFG_PATH)) \
	elif test "$(SETBIT)" = "2"; then \
		(chmod -R 070 $(SERVERCFG_PATH); \
		chown :$(SETGROUP) $(SERVERCFG_PATH)) \
	elif test "$(SETBIT)" = "3"; then \
		(chmod -R 770 $(SERVERCFG_PATH); \
		chown $(SETUSER):$(SETGROUP) $(SERVERCFG_PATH)) \
	elif test "$(SETBIT)" = "0"; then \
		chmod -R 777 $(SERVERCFG_PATH); \
	fi
	$(INSTALL_DATA) README.cfgdir $(SERVERCFG_PATH)/README

.PHONY: uninstall
uninstall:
	rm -f $(DESTDIR)/$(bindir)/$(NAME);
	rm -f $(SERVERCFG_PATH)/README;

.PHONY: clean
clean:
	rm -rf $(NAME) $(OBJDIR); 
